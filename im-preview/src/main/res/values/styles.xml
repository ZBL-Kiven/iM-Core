<resources>

    <declare-styleable name="PreviewBaseLoadingView">
        <attr name="preview_backgroundFill" format="color"/>
        <attr name="preview_backgroundOnAct" format="color"/>
        <attr name="preview_loadingRes" format="reference"/>
        <attr name="preview_noDataRes" format="reference"/>
        <attr name="preview_noNetworkRes" format="reference"/>
        <attr name="preview_hintColor" format="color|reference"/>
        <attr name="preview_refreshTextColor" format="color|reference"/>
        <attr name="preview_loadingText" format="string"/>
        <attr name="preview_noDataText" format="string"/>
        <attr name="preview_networkErrorText" format="string"/>
        <attr name="preview_refreshText" format="string"/>
        <attr name="preview_showOnActDefault" format="boolean"/>
        <attr name="preview_refreshEnable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SquareImageView">
        <attr name="squareWith" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="squareRatio" format="fraction"/>
    </declare-styleable>

    <style name="mProgress_circle">
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

    <style name="CustomSeekBarStyle">
        <item name="android:maxHeight">3dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/conversation_preview_color_white</item>
        <item name="android:progressDrawable">@drawable/conversation_preview_video_seek_bar_progress_drawable</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:thumb">@drawable/conversation_preview_video_thumb</item>
    </style>


</resources>
