<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical">

    <com.zj.preview.images.BannerViewPager
            android:id="@+id/conversation_preview_vp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:id="@+id/conversation_preview_tools_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/conversation_preview_tv_start"
                android:layout_width="wrap_content"
                android:text="@string/conversation_preview_video_str_default_time"
                android:textColor="@color/color_primary"
                android:layout_height="wrap_content"/>

        <SeekBar
                android:id="@+id/conversation_preview_sb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                tools:progress="20"/>
        <TextView
                android:id="@+id/conversation_preview_tv_end"
                android:layout_width="wrap_content"
                android:text="@string/conversation_preview_video_str_default_time"
                android:textColor="@color/color_primary"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>