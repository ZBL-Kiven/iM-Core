<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:focusable="true"
              android:clickable="true"
              android:background="@color/color_primary_light_grey_dark"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

        <ImageView
                android:id="@+id/btn_voice_or_text"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:src="@mipmap/ui_emo_icon_voice"
                tools:ignore="ContentDescription"/>

        <Button
                android:id="@+id/btn_voice"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/rl_multi_and_send"
                android:layout_toEndOf="@+id/btn_voice_or_text"
                android:background="@drawable/ui_bg_voice"
                android:text="@string/ui_input_tap_to_speaking"
                android:textColor="#727272"
                android:visibility="gone"/>

        <RelativeLayout
                android:id="@+id/rl_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:padding="3dp"
                android:background="@drawable/ui_chat_bg_et_input"
                android:layout_toStartOf="@+id/rl_multi_and_send"
                android:layout_toEndOf="@+id/btn_voice_or_text"
                android:orientation="horizontal">

            <com.zj.im.emotionboard.widget.EmoticonsEditText
                    android:id="@+id/et_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/btn_face"
                    android:background="@null"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLines="3"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="16sp"/>

            <ImageView
                    android:id="@+id/btn_face"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:src="@mipmap/ui_emo_icon_face_pop"
                    tools:ignore="ContentDescription"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_multi_and_send"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/btn_multimedia"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ui_emo_icon_more"
                    tools:ignore="ContentDescription"/>

            <Button
                    android:id="@+id/btn_send"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ui_bf_send_bg_disable"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/ui_input_send"
                    android:textColor="@color/color_primary"
                    android:textSize="12sp"
                    android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

    <com.zj.im.emotionboard.widget.FuncLayout
            android:id="@+id/key_board_func"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone"/>
</LinearLayout>