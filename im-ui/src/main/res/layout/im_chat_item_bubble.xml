<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
>

    <ImageView
            android:id="@id/im_chat_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            tools:ignore="ContentDescription"
            android:layout_alignParentEnd="false"

    />

    <TextView
            android:id="@id/im_chat_nickname"
            android:layout_marginStart="15dp"
            tools:text="@string/app_name"
            android:layout_alignTop="@id/im_chat_avatar"
            android:layout_toEndOf="@id/im_chat_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

    />

    <com.zj.im.list.items.BubbleLayout
            android:id="@id/im_chat_bubble"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_below="@id/im_chat_nickname"
            android:layout_toEndOf="@id/im_chat_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />


</RelativeLayout>