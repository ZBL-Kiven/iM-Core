<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <corners android:radius="8dp"/>
            <stroke android:width="@dimen/app_base_line_width"
                    android:color="@color/color_primary_light_grey"/>
            <solid android:color="@color/app_base_line_color_focused"/>
        </shape>
    </item>

    <item android:state_focused="false">
        <shape>
            <corners android:radius="8dp"/>
            <stroke android:width="@dimen/app_base_line_width"
                    android:color="@color/app_base_line_color"/>
            <solid android:color="@color/app_base_line_color_focused"/>
        </shape>
    </item>
</selector>