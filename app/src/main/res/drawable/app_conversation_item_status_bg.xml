<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <size android:width="100dp" android:height="100dp"/>
            <solid android:color="@color/app_base_text_color_999"/>
            <stroke android:color="@color/color_primary" android:width="@dimen/app_base_line_width"/>
            <corners android:radius="200dp"/>
            <padding android:top="3dp" android:bottom="3dp" android:right="3dp" android:left="3dp"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <size android:width="100dp" android:height="100dp"/>
            <stroke android:color="@color/color_primary_grey" android:width="@dimen/app_base_line_width"/>
            <corners android:radius="200dp"/>
            <padding android:top="3dp" android:bottom="3dp" android:right="3dp" android:left="3dp"/>
        </shape>
    </item>
</selector>