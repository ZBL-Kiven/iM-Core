<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/app_base_background"
        android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/app_fragment_setting_rl_card"
            android:background="@drawable/app_base_click_bg_btn_corners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
        <ImageView
                android:id="@+id/app_fragment_setting_iv_avatar"
                android:layout_width="@dimen/app_setting_avatar_width"
                android:layout_height="@dimen/app_setting_avatar_height"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/app_contact_avatar_default"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/app_fragment_setting_tv_name"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_below="@id/app_fragment_setting_iv_avatar"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/app_et_text_size_18"
                android:textColor="@color/color_primary"
                tools:text="JunJie.Zhao"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/app_fragment_setting_tv_info_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/app_et_text_size_12"
                tools:text="male · Beijing·China"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_below="@id/app_fragment_setting_tv_name"
                android:textColor="@color/app_base_text_color_999"
                android:background="@mipmap/app_user_info_icon_gender_male"/>

        <LinearLayout
                android:id="@+id/app_fragment_setting_ll_contact_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/app_fragment_setting_tv_info_bar"
                android:layout_marginTop="10dp">
            <TextView
                    android:id="@+id/app_fragment_setting_tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoLink="email|phone|web"
                    android:drawablePadding="3dp"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@mipmap/app_user_info_email_alt"
                    android:textSize="@dimen/app_et_text_size_12"
                    android:textColor="@color/color_primary_grey"
                    tools:text="zjj0888@gmail.com"/>
            <TextView
                    android:id="@+id/app_fragment_setting_tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@mipmap/app_user_info_phone_call"
                    android:drawablePadding="3dp"
                    android:autoLink="email|phone|web"
                    android:textSize="@dimen/app_et_text_size_12"
                    android:textColor="@color/color_primary_grey"
                    tools:text="+86 17080158000"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
                android:id="@+id/app_fragment_setting_tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                tools:visibility="visible"
                android:visibility="gone"
                android:background="@mipmap/app_user_info_note_bg"
                tools:text="by keeping as many manufacturing processes in house, including winding our own transformers and foil capacitors"
                android:textColor="@color/app_base_text_color_666"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:lineSpacingExtra="2.4dp"
                android:layout_below="@id/app_fragment_setting_ll_contact_bar"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/app_fragment_setting_tv_clear_caches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/app_fragment_setting_clear_caches"
            android:background="@drawable/app_base_click_bg_btn_corners"
            android:drawableEnd="@mipmap/app_common_icon_next"
            android:textSize="@dimen/app_et_text_size_14"
            android:padding="10dp"
            android:layout_below="@id/app_fragment_setting_rl_card"/>

    <com.zj.imcore.ui.views.LoadingButton
            android:id="@+id/app_fragment_setting_lb_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:lb_btnColor="@color/color_primary"
            app:lb_btnDisabledColor="@color/app_base_color_disable"
            app:lb_resetAfterFailed="true"
            app:lb_disabledTextColor="@color/app_base_color_text_disable"
            app:lb_cornerRadius="8"
            app:lb_btnRippleColor="@color/color_primary_grey"
            app:lb_rippleEnable="true"
            app:lb_btnRippleAlpha="0.5"
            app:lb_textColor="@color/color_primary_text_color"
            app:lb_btnText="@string/app_fragment_setting_logout"/>

</RelativeLayout>