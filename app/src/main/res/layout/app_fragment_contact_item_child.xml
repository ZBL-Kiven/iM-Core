<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/app_fragment_contact_item_iv_avatar"
            android:layout_width="@dimen/app_contact_avatar_width"
            android:layout_height="@dimen/app_contact_avatar_height"
            android:layout_marginEnd="15dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/app_fragment_contact_item_tv_name"
            android:layout_width="wrap_content"
            tools:text="a aa aaa a"
            android:textColor="@color/color_primary"
            android:layout_alignTop="@id/app_fragment_contact_item_iv_avatar"
            android:textSize="@dimen/app_et_text_size_14"
            android:layout_toEndOf="@+id/app_fragment_contact_item_iv_avatar"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/app_fragment_contact_item_tv_title"
            android:layout_width="wrap_content"
            android:textSize="@dimen/app_et_text_size_10"
            android:layout_alignBottom="@id/app_fragment_contact_item_iv_avatar"
            tools:text="b v v a "
            android:layout_toEndOf="@+id/app_fragment_contact_item_iv_avatar"
            android:layout_height="wrap_content"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_base_line_width"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/app_fragment_contact_item_iv_avatar"
            android:layout_below="@id/app_fragment_contact_item_iv_avatar"
            android:background="@color/color_primary_grey"/>

</RelativeLayout>