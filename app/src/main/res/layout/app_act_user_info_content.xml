<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_background"
    android:orientation="vertical">

    <com.zj.base.view.BaseTitleView
    style="@style/BaseTitleViewStyle"
    android:id="@+id/app_act_uer_info_title"/>

    <LinearLayout style="@style/userInfoItemGroup">

        <TextView
            style="@style/userInfoItemHint"
            android:text="@string/app_act_user_info_user_img_avatar_hint" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <ImageView
                android:id="@+id/app_act_user_info_iv_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/app_act_user_info_user_img_avatar_hint"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <View style="@style/userInfoItemInterval" />

    <LinearLayout style="@style/userInfoItemGroup">

        <TextView
            style="@style/userInfoItemHint"
            android:text="@string/app_act_user_info_user_nickname_hint" />

        <TextView
            android:id="@+id/app_act_user_info_tv_nick_name"
            style="@style/userInfoItemContent"
            tools:text="xxx" />

    </LinearLayout>

    <View style="@style/userInfoItemInterval" />

    <LinearLayout style="@style/userInfoItemGroup">

        <TextView
            style="@style/userInfoItemHint"
            android:text="@string/app_act_user_info_user_name_hint" />

        <TextView
            android:id="@+id/app_act_user_info_tv_user_name"
            style="@style/userInfoItemContent"
            tools:text="user_sdjfl" />

    </LinearLayout>


    <View style="@style/userInfoItemInterval" />

    <LinearLayout style="@style/userInfoItemGroup">

        <TextView
            style="@style/userInfoItemHint"
            android:text="@string/app_act_user_info_user_describe_hint" />

        <TextView
            android:id="@+id/app_act_user_info_tv_describe"
            style="@style/userInfoItemContent"
            android:text="@string/app_act_user_info_user_describe_default" />

    </LinearLayout>

    <View style="@style/userInfoItemInterval" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/app_act_user_info_btn_send_msg"
        style="@style/btnStyle"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/base_btn_selector"
        android:text="@string/app_act_user_info_send_msg" />

</LinearLayout>