<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/app_base_line_width"
        android:orientation="horizontal"
        android:background="@drawable/app_conversation_item_bg">

    <RelativeLayout
            android:id="@+id/app_fragment_conversation_item_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="8dp"
            android:baselineAligned="false">
        <ImageView
                android:id="@+id/app_fragment_conversation_item_iv_avatar"
                android:layout_width="@dimen/app_contact_avatar_width"
                android:layout_height="@dimen/app_contact_avatar_height"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription"/>
        <TextView
                android:id="@+id/app_fragment_conversation_item_tv_count"
                style="@style/baseRedDotTvStyle"
                android:layout_alignEnd="@id/app_fragment_conversation_item_iv_avatar"
                android:layout_alignTop="@id/app_fragment_conversation_item_iv_avatar"
                android:textColor="@color/color_primary_light_grey"
                android:textSize="@dimen/app_et_text_size_10"
                android:layout_marginEnd="-8dp"
                android:layout_marginTop="-8dp"
                android:minWidth="16dp"
                android:minHeight="16dp"
                tools:text="12431"/>

        <TextView
                android:id="@+id/app_fragment_conversation_item_tv_name"
                style="@style/baseWrapSingleLineTextView"
                android:textColor="@color/app_base_text_color_333"
                android:textSize="@dimen/app_et_text_size_16"
                android:layout_alignTop="@id/app_fragment_conversation_item_iv_avatar"
                android:layout_toEndOf="@id/app_fragment_conversation_item_iv_avatar"
                android:layout_toStartOf="@id/app_fragment_conversation_item_tv_time"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                tools:text="title"/>

        <TextView
                android:id="@+id/app_fragment_conversation_item_tv_sub_detail"
                style="@style/baseWrapSingleLineTextView"
                android:textColor="@color/app_base_text_color_666"
                android:textSize="@dimen/app_et_text_size_12"
                android:layout_alignBottom="@id/app_fragment_conversation_item_iv_avatar"
                android:layout_alignStart="@id/app_fragment_conversation_item_tv_name"
                android:layout_toStartOf="@id/app_fragment_conversation_item_tv_time"
                android:layout_alignEnd="@id/app_fragment_conversation_item_tv_name"
                tools:text="sub detail"/>

        <TextView
                android:id="@+id/app_fragment_conversation_item_tv_time"
                style="@style/baseWrapSingleLineTextView"
                android:textColor="@color/app_base_text_color_999"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/app_fragment_conversation_item_iv_avatar"
                tools:text="00:00"
                android:textSize="@dimen/app_et_text_size_10"/>

        <ImageView
                android:id="@+id/app_fragment_conversation_item_v_mute_display"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="centerInside"
                android:visibility="gone"
                android:src="@mipmap/app_conversation_icon_mute"
                android:layout_alignStart="@id/app_fragment_conversation_item_tv_time"
                android:layout_alignEnd="@id/app_fragment_conversation_item_tv_time"
                android:layout_alignBottom="@id/app_fragment_conversation_item_tv_sub_detail"
                tools:ignore="ContentDescription"/>
    </RelativeLayout>

    <com.zj.base.view.DrawableTextView
            android:id="@+id/app_fragment_conversation_item_v_unread"
            style="@style/conversationStatusDrawableTextViewStyle"
            app:viewWidth="@dimen/app_conversation_menu_width"
            app:viewHeight="@dimen/app_conversation_menu_width"
            app:drawableWidth="35dp"
            app:drawableHeight="35dp"
            app:translationTime="1000"
            app:drawablePadding="3dp"
            android:layout_marginStart="10dp"
            app:textColor="@color/color_primary_disable"
            app:textSize="@dimen/app_et_text_size_10"
            app:textColor_select="@color/color_primary"
            app:orientation="top"
            app:gravity="CENTER"
            app:text="unread"
            app:replaceDrawable="@mipmap/app_conversation_item_unread_normal"
            app:selectedDrawable="@mipmap/app_conversation_item_unread_selected"
    />
    <com.zj.base.view.DrawableTextView
            android:id="@+id/app_fragment_conversation_item_v_pin"
            style="@style/conversationStatusDrawableTextViewStyle"
            app:viewWidth="@dimen/app_conversation_menu_width"
            app:viewHeight="@dimen/app_conversation_menu_width"
            app:drawableWidth="30dp"
            app:drawableHeight="30dp"
            app:translationTime="1000"
            app:drawablePadding="3dp"
            android:layout_marginStart="10dp"
            app:textColor="@color/color_primary_disable"
            app:textSize="@dimen/app_et_text_size_10"
            app:textColor_select="@color/color_primary"
            app:orientation="top"
            app:gravity="CENTER"
            app:text="pin"
            app:replaceDrawable="@mipmap/app_conversation_item_pin_normal"
            app:selectedDrawable="@mipmap/app_conversation_item_pin_selected"
    />
    <com.zj.base.view.DrawableTextView
            android:id="@+id/app_fragment_conversation_item_v_mute"
            style="@style/conversationStatusDrawableTextViewStyle"
            app:viewWidth="@dimen/app_conversation_menu_width"
            app:viewHeight="@dimen/app_conversation_menu_width"
            app:drawableWidth="30dp"
            app:drawableHeight="30dp"
            app:translationTime="1000"
            app:drawablePadding="3dp"
            android:layout_marginStart="10dp"
            app:textColor="@color/color_primary_disable"
            app:textSize="@dimen/app_et_text_size_10"
            app:textColor_select="@color/color_primary"
            app:orientation="top"
            app:gravity="CENTER"
            app:text="mute"
            app:replaceDrawable="@mipmap/app_conversation_item_mute_normal"
            app:selectedDrawable="@mipmap/app_conversation_item_mute_selected"
    />
    <com.zj.base.view.DrawableTextView
            android:id="@+id/app_fragment_conversation_item_v_archive"
            style="@style/conversationStatusDrawableTextViewStyle"
            app:viewWidth="@dimen/app_conversation_menu_width"
            app:viewHeight="@dimen/app_conversation_menu_width"
            app:drawableWidth="30dp"
            app:drawableHeight="30dp"
            app:translationTime="1000"
            app:drawablePadding="3dp"
            android:layout_marginStart="10dp"
            app:textColor="@color/color_primary_disable"
            app:textSize="@dimen/app_et_text_size_10"
            app:textColor_select="@color/color_primary"
            app:orientation="top"
            app:gravity="CENTER"
            app:text="archive"
            app:replaceDrawable="@mipmap/app_conversation_item_archive_normal"
            app:selectedDrawable="@mipmap/app_conversation_item_archive_selected"
    />
</LinearLayout>