<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp">

    <ImageView
            android:id="@+id/app_act_contact_select_item_iv_avatar"
            android:layout_width="@dimen/app_contact_avatar_width"
            android:layout_marginEnd="15dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/app_contact_avatar_height"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/app_act_contact_select_item_tv_name"
            android:layout_width="wrap_content"
            tools:text="a aa aaa a"
            android:textColor="@color/color_primary"
            android:layout_alignTop="@id/app_act_contact_select_item_iv_avatar"
            android:textSize="@dimen/app_et_text_size_16"
            android:layout_toStartOf="@id/app_act_contact_select_item_cv"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/app_act_contact_select_item_iv_avatar"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/app_act_contact_select_item_tv_title"
            android:layout_width="wrap_content"
            android:textSize="@dimen/app_et_text_size_12"
            android:layout_alignBottom="@id/app_act_contact_select_item_iv_avatar"
            android:layout_alignEnd="@id/app_act_contact_select_item_tv_name"
            tools:text="b v v a "
            android:layout_toEndOf="@+id/app_act_contact_select_item_iv_avatar"
            android:layout_height="wrap_content"/>

    <CheckBox
            android:id="@+id/app_act_contact_select_item_cv"
            android:layout_width="40dp" android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_base_line_width"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/app_act_contact_select_item_iv_avatar"
            android:layout_alignParentBottom="true"
            android:background="@color/color_primary_grey"/>

</RelativeLayout>