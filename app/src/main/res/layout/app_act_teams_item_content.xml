<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/app_act_teams_item_iv"
            android:layout_width="@dimen/app_conversation_avatar_width"
            android:layout_height="@dimen/app_conversation_avatar_height"
            tools:ignore="ContentDescription"
    />

    <TextView
            android:id="@+id/app_act_teams_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            tools:text="cgkj"
    />

    <TextView
            android:id="@+id/app_act_teams_item_tv_description"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            tools:text="cgkj"
    />

</LinearLayout>