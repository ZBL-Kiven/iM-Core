<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

    <ImageView
            android:id="@+id/app_act_teams_item_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:src="@mipmap/app_contact_avatar_default"
            tools:ignore="ContentDescription"
    />

    <TextView
            android:id="@+id/app_act_teams_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/app_et_text_size_14"
            android:textColor="@color/app_base_text_color_333"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
    />

    <TextView
            android:id="@+id/app_act_teams_item_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_base_text_color_999"
            android:textSize="@dimen/app_et_text_size_10"
            android:layout_gravity="center"
            android:maxLines="2"
            android:lines="2"
            android:ellipsize="end"
    />

</LinearLayout>